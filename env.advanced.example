# ========================================
# CONFIGURAÇÕES AVANÇADAS - GOAL TRACKER API
# ========================================
# Este arquivo contém configurações avançadas opcionais
# Use apenas quando precisar de funcionalidades específicas

# ========================================
# CONFIGURAÇÕES AVANÇADAS DO BANCO DE DADOS
# ========================================

# Pool de conexões avançado
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=5
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000
DB_SSL=false
DB_SCHEMA=public

# ========================================
# CONFIGURAÇÕES AVANÇADAS DE AUTENTICAÇÃO
# ========================================

# JWT Refresh Token
JWT_REFRESH_SECRET=sua_chave_secreta_refresh_aqui_muito_segura_e_longa
JWT_REFRESH_EXPIRES_IN=30d

# Configurações de senha
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# ========================================
# CONFIGURAÇÕES AVANÇADAS DE CORS
# ========================================

CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Accept,Authorization

# ========================================
# CONFIGURAÇÕES DE LOGS
# ========================================

LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ========================================
# CONFIGURAÇÕES DE RATE LIMITING
# ========================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# ========================================
# CONFIGURAÇÕES DE VALIDAÇÃO
# ========================================

VALIDATION_WHITELIST=true
VALIDATION_FORBID_NON_WHITELISTED=true
VALIDATION_FORBID_UNKNOWN_VALUES=true
VALIDATION_TRANSFORM=true

# ========================================
# CONFIGURAÇÕES DE CACHE (REDIS)
# ========================================

CACHE_TTL=300
CACHE_MAX_ITEMS=1000
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# CONFIGURAÇÕES DE EMAIL
# ========================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=seu_email@gmail.com
EMAIL_PASSWORD=sua_senha_de_app
EMAIL_FROM=noreply@goaltracker.com

# ========================================
# CONFIGURAÇÕES DE UPLOAD
# ========================================

UPLOAD_MAX_SIZE=5242880
UPLOAD_DEST=./uploads
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ========================================

HEALTH_CHECK_TIMEOUT=3000
HEALTH_CHECK_INTERVAL=30000

# ========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ========================================

COMPRESSION_ENABLED=true
COMPRESSION_THRESHOLD=1024
COMPRESSION_LEVEL=6

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================

HELMET_ENABLED=true
HELMET_CONTENT_SECURITY_POLICY=true
HELMET_HIDE_POWERED_BY=true

# ========================================
# CONFIGURAÇÕES DE TESTES
# ========================================

TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_USERNAME=postgres
TEST_DB_PASSWORD=sua_senha_aqui
TEST_DB_DATABASE=goal_tracker_test_db
TEST_DB_SYNCHRONIZE=true
TEST_DB_LOGGING=false

# ========================================
# CONFIGURAÇÕES DE DEPLOY
# ========================================

DOCKER_ENABLED=false
DOCKER_IMAGE_NAME=goal-tracker-api
DOCKER_TAG=latest

# ========================================
# CONFIGURAÇÕES DE INTEGRAÇÃO
# ========================================

FRONTEND_URL=http://localhost:3000
API_PREFIX=api
API_VERSION=v1 