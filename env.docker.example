JWT_EXPIRES_IN=7d

# ========================================
# CONFIGURAÇÕES DE CORS
# ========================================

# CORS - Configure para seu domínio
CORS_ORIGIN=https://seu-dominio.com
CORS_CREDENTIALS=true

# ========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ========================================

# Produção - Configurações para produção
DEBUG=false
SWAGGER_ENABLED=false 