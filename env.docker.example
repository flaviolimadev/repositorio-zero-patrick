# PostgreSQL - Configurações para Docker
DB_USERNAME=postgres
DB_PASSWORD=postgres123
DB_DATABASE=goal_tracker_db
DB_SYNCHRONIZE=false
DB_LOGGING=false

# ========================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO
# ========================================

# JWT - IMPORTANTE: Altere esta chave em produção!
